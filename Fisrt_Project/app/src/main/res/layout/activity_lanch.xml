<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lanch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zl.project.fisrt_project.UI.Activity.LaunchActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/launch_bottom_arl"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/blue_bg2">

        <ImageView
            android:id="@+id/launch_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="310px"
            android:src="@mipmap/app_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"
            android:layout_toRightOf="@id/launch_icon"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="33px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <RelativeLayout
        android:id="@+id/launch_arl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/launch_bottom_arl">

        <ImageView
            android:id="@+id/launch_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/robot"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/launch_text"
        android:layout_width="160px"
        android:layout_height="60px"
        android:layout_alignParentRight="true"
        android:layout_margin="20px"
        android:text="@string/launch_text"
        android:background="@drawable/launch_text_shape"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="28px"
        android:alpha="0.6"
        />

</com.zhy.autolayout.AutoRelativeLayout>
